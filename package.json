{
  "name": "diamondbridge-vercel-api",
  "version": "1.0.0",
  "description": "Vercel API routes for DiamondBridge application",
  "main": "api/index.js",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Building Vercel API'",
    "start": "node api/index.js",
    
    "test": "./scripts/test.sh all true",
    "test:unit": "./scripts/test.sh unit true",
    "test:integration": "./scripts/test.sh integration true",
    "test:e2e": "./scripts/test.sh e2e true",
    "test:watch": "./scripts/test.sh all false false true",
    "test:coverage": "./scripts/test.sh all true",
    "test:lint": "./scripts/test.sh lint",
    "test:type-check": "./scripts/test.sh type-check",
    
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "lint:check": "prettier --check .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    
    "setup": "./scripts/setup.sh",
    "deploy": "./scripts/deploy.sh diamondbridge production main",
    "deploy:staging": "./scripts/deploy.sh diamondbridge staging develop",
    "deploy:dev": "./scripts/deploy.sh diamondbridge development dev-branch",
    "deploy:preview": "vercel --preview",
    "deploy:prod": "vercel --prod",
    
    "backup": "./scripts/backup.sh auto",
    "backup:full": "./scripts/backup.sh full",
    "backup:code": "./scripts/backup.sh code",
    "backup:database": "./scripts/backup.sh database",
    "backup:cleanup": "./scripts/backup.sh cleanup",
    "backup:list": "./scripts/backup.sh list",
    "backup:restore": "./scripts/backup.sh restore",
    
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.cache .vite .turbo",
    "clean:all": "rm -rf dist node_modules .cache .vite .turbo .next .nuxt .vercel coverage test-results",
    
    "precommit": "lint-staged",
    "prepare": "husky install",
    
    "postinstall": "husky install || true",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": ["vercel", "api", "serverless", "diamondbridge", "automation", "deployment"],
  "author": "DiamondBridge Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "googleapis": "^126.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "vercel": "^32.7.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "typescript": "^5.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@playwright/test": "^1.36.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "rclone": "^1.62.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/diamondbridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/diamondbridge/issues"
  },
  "homepage": "https://github.com/your-username/diamondbridge#readme",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/tests/**/*.test.{js,ts}"],
    "moduleFileExtensions": ["js", "ts", "json"]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "ignorePatterns": ["node_modules/", "dist/", "coverage/"]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}